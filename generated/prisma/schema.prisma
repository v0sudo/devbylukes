// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Developer {
  id              Int      @id @default(autoincrement())
  name            String
  twitter         String?
  github          String?
  website         String?
  description     String?
  avatar          String?
  notableProjects Json? // Array of {name: string, url: string}
  editUuid        String?  @unique
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([name])
  @@index([editUuid])
}
